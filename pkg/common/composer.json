{
  "name": "spaceonfire/common",
  "description": "Application kernel based on DI container and CQRS buses",
  "type": "library",
  "keywords": [
    "kernel",
    "env",
    "dotenv",
    "cqrs",
    "command",
    "query"
  ],
  "homepage": "https://github.com/spaceonfire/common",
  "license": "MIT",
  "authors": [
    {
      "name": "Constantine Karnaukhov",
      "email": "genteelknight@gmail.com",
      "homepage": "https://www.onfire.space/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "spaceonfire/exception": "^3.0",
    "symfony/polyfill-php80": "^1.22"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "psr/log": "^1.1",
    "roave/security-advisories": "dev-latest",
    "spaceonfire/command-bus": "^3.0",
    "spaceonfire/container": "^3.0",
    "symfony/console": "^5.2",
    "symfony/property-access": "^5.2",
    "symfony/property-info": "^5.2",
    "vlucas/phpdotenv": "^5.2",
    "yiisoft/arrays": "^1.0"
  },
  "suggest": {
    "vlucas/phpdotenv": "Required for env() function",
    "spaceonfire/command-bus": "Used to organize CQRS buses",
    "spaceonfire/container": "Used to organize Kernel",
    "symfony/property-access": "^5.2",
    "yiisoft/arrays": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "spaceonfire\\Common\\": "src"
    },
    "files": [
      "functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "spaceonfire\\Common\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  }
}
