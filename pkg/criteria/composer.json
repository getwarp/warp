  "require": {
    "php": "^7.4|^8.0",
    "spaceonfire/common": "^3.0",
    "webmozart/expression": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "spaceonfire\\Criteria\\": "src"
    }
